<%= render 'book', book: @book_new, user: @user %>



<h2>Book detail</h2>
<table class="null">
  <tr>
    <td><%= image_tag @book.user.get_profile_image(100,100) %><p><%= link_to "#{@book.user.name}", user_path(@book.user.id) %></p></td>
    <td><%= link_to "#{@book.title}", book_path(@book.id) %></td>
    <td><%= @book.body %></td>
    <% if @book.user == current_user %>
    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
    <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?" %></td>
    <% end %>
  </tr>
</table>