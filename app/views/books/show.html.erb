<%= render 'book', book: @book_new %>



<h2>Book detail</h2>
<table class="null">
  <tr>
    <td><%= image_tag @book.user.get_profile_image(100,100) %><p><%= link_to "#{@book.user.name}", user_path(@book.user.id) %></p></td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
    <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
</table>