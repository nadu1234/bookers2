<div class="container">
  <div class="row">
          <div class ="col-10 my-3" >
            <% if @book.errors.any? %>
            <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end%>
            </ul>
            <% end %>
          </div>
    </div>
    
  <div class="row mt-2">
    <div class ="col-md-3" >
<%= render 'book', book: @book, user: @user %>
      </div>
      <div class ="col-md-8 offset-md-1" >
      <h2>books</h2>
      <table class="table table-hover">
        <tr>
          <th colspan="1"></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
          <td><%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(book.user.id) %></td>  
          <td><%= link_to "#{book.title}", book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>