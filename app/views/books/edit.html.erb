<h2>Editing Book</h2>
<!-- form_with部分 -->
<% if @book.errors.any? %>
  <strong><%= @book.errors.count %>errors prohibited this book from being saved:</strong>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li><br>
    <% end%>
  </ul>
<% end %>

<div class="input">
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <label>Title</label><br>
    <%= f.text_field :title %>
    <br>
    <label>Body</label><br>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Update Book' %>
  <% end %>
</div>

<ul>
  <li>
    <%= link_to "Show", book_path(@book.id) %>
  </li> 
  <li>
    |
  </li>
  <li>
    <%= link_to 'Back', books_path %>
  </li>
</ul>