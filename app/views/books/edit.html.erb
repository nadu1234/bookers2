<div class="container">
  <div class="row justify-content-center">
    <div class ="col-5 align-self-start my-3" >

          <h2>Editing Book</h2>
          <!-- form_with部分 -->
          <% if @book.errors.any? %>
            <strong><%= @book.errors.count %>errors prohibited this book from being saved:</strong>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li><br>
              <% end%>
            </ul>
          <% end %>

        <div class="input">
          <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
          <div class="form-group">
            <label>Title</label><br>
            <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="form-group">
            <label>Body</label><br>
            <%= f.text_area :body, class: "form-control" %>
            </div>
            <%= f.submit 'Update Book', class: "btn btn-success" %>
          <% end %>
        </div>

        <ul >
            <%= link_to "Show", book_path(@book.id) %> | <%= link_to 'Back', books_path %>
        </ul>
    </div>
  </div>
</div>