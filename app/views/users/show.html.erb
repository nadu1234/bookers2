<div class="container">


  <div class="row mt-2">
    <div class ="col-md-3" >
<%= render 'books/book' , book: @book, user: @user  %>
    </div>
    <div class ="col-md-8 offset-md-1" >
        <h2>Books</h2>
        <table class="table table-hover">
          <thead>
          <tr>
            <th colspan="1"></th>
            <th>Title</th>
            <th>Body</th>
          </tr>
          </thead>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td><%= link_to "#{book.title}", book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </table>
    </div>
  </div>
</div>