<h2>User info</h2>

<% if @user.errors.any? %>
  <strong><%= @user.errors.count %>errors prohibited this book from being saved:</strong>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li><br>
    <% end%>
  </ul>
<% end %>


<div class="input">
  <%= form_with model: @user do |f| %>
    <label>Name</label><br>
    <%= f.text_field :name %>
    <br>
    <label>Image</label><br>
    <%= f.file_field :profile_image, accept: "image/*" %>
    <br>
    <label>Introduction</label><br>
    <%= f.text_area :introduction %>
    <br>
    <%= f.submit 'Update User' %>
  <% end %>
</div>
